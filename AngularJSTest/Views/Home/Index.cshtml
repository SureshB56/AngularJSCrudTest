<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <style>
        .odd {
            background-color: #f3f3f3;
        }

        .even {
            background-color: #ffffff;
        }

        #sidebar {
            position: fixed;
            width: 250px;
            height: 100%;
            background: #343a40;
            color: #fff;
            transition: all 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* #sidebar.active {
                margin-left: -250px;
            }*/

        #content {
            width: 100%;
            padding: 0px 15px;
            transition: all 0.3s;
        }



        #sidebarCollapse {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            cursor: pointer;
            transition: all 0.3s;
            position: fixed;
            top: 8px;
            left: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            #sidebarCollapse i {
                color: #343a40;
            }

            #sidebarCollapse.active {
                left: 240px;
            }

                #sidebarCollapse.active i {
                    transform: rotate(180deg);
                }

        .navbar {
            background: #343a40;
            color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #fff;
        }

        .navbar-nav .nav-item .nav-link {
            color: #fff;
        }

        .list-unstyled {
            padding-left: 0;
            list-style: none;
            padding-top: 100px;
            padding-left: 23px;
        }

            .list-unstyled li {
                padding-bottom: 15px;
            }

                .list-unstyled li a {
                    color: #fff !important;
                }

        .pl-10 {
            padding-left: 15px;
        }
    </style>

</head>
<body class="bg-light">



    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div id="sidebarCollapse" class="bg-dark text-light p-2">
                <i class="fas fa-bars"></i>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="~/Home/Index">Home</a>
                </li>
                <li>
                    <a href="#dashboard">Dashboard</a>
                </li>
                <li>
                    <a href="#users">Users</a>
                </li>
                <li>
                    <a href="#settings">Settings</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg">
                <button type="button" id="sidebarCollapseButton" class="btn btn-dark">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Settings</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Your content goes here -->
            <div class="container-fluid">

                <div  ng-app="Homeapp"  ng-controller="HomeController" class="col-lg-10 offset-2 mt-4">
                    <h2>Create User Details</h2>

                    <div class="panel-body col-panel-body">
                        <form class="form-horizontal" name="frm_DisposalSearch" role="form" id="frm_DisposalSearch" ng-submit="SearchDisposal()">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>FirstName</label>
                                        <input type="text" ng-model="register.FirstName" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>LastName</label>
                                        <input type="text" ng-model="register.LastName" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" ng-model="register.Email" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>PhoneNumber</label>
                                        <input type="password" ng-model="register.PhoneNumber" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" ng-model="register.Address" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>City</label>
                                        <input type="text" ng-model="register.City" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>State</label>
                                        <input type="text" ng-model="register.State" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Country</label>
                                        <input type="text" ng-model="register.Country" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>PostalCode</label>
                                        <input type="text" ng-model="register.PostalCode" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <input type="button" class="btn btn-primary" ng-click="savedata()" value="{{btntext}}" />
                                    </div>
                                </div>
                            </div>

                        </form>







                    </div>
                </div>
            </div>
        </div>
    </div>



    <footer class="mt-4">
        <div class="container-fluid ">
            <div class="col-lg-10 offset-2 mt-4"><p class="pl-10">&copy;Your Company Name. All rights reserved.</p></div>


        </div>
    </footer>


    <script src="~/Script/angular.min.js"></script>

    <script src="~/Script/AngularController/HomeAngular.js"></script>


</body>

</html>
