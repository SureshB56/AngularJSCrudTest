
@{
    Layout = null;
}


<!DOCTYPE html>



<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Index</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <style>

        header,
        footer,
        aside {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .content {
            background-color: #fff;
            padding: 10px;
            margin: 10px;
            min-height: 80vh;
        }

        aside {
            width: 9%;
            position: fixed;
            top: 54px;
            left: 47px;
            height: 78%;
            position: fixed;
        }

        main {
            margin-left: 20%;
            margin-right: 20%; 
        }
    </style>


</head>

<body>
    <header>
        <h1>Welcome to My Website</h1>
    </header>
    <aside id="leftSidebar" class="collapse">
        <button type="button" class="btn btn-primary" data-toggle="collapse">
            Toggle Left Sidebar
        </button>
        <p>Left Sidebar</p>
    </aside>

    <div class="container">
        <div class="content">
            <div ng-app="Homeapp" ng-controller="HomeController">

                <div class="container">

                    <div class="row">

                        <div class="col-sm-2"></div>

                        <div class="col-sm-8">

                            <div class="form-group">

                                <label>FirstName</label>

                                <input type="text" ng-model="register.FirstName" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>LastName</label>

                                <input type="text" ng-model="register.LastName" class="form-control" />

                            </div>


                            <div class="form-group">

                                <label>Email</label>

                                <input type="text" ng-model="register.Email" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>PhoneNumber</label>

                                <input type="password" ng-model="register.PhoneNumber" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>Address</label>

                                <input type="text" ng-model="register.Address" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>City</label>

                                <input type="text" ng-model="register.City" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>State</label>

                                <input type="text" ng-model="register.State" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>Country</label>

                                <input type="text" ng-model="register.Country" class="form-control" />

                            </div>

                            <div class="form-group">

                                <label>PostalCode</label>

                                <input type="text" ng-model="register.PostalCode" class="form-control" />

                            </div>

                            <div class="form-group">

                                <input type="button" class="btn btn-primary" ng-click="savedata()" value="{{btntext}}" />

                            </div>

                        </div>

                        <div class="col-sm-2"></div>

                    </div>

                </div>

            </div>
        </div>
    </div>
    <aside>
        
        <p>Right Sidebar</p>
    </aside>
    <footer>
        <p>&copy; 2024 Your Website. All rights reserved.</p>
    </footer>


    <script src="~/Script/angular.min.js"></script>

    <script src="~/Script/AngularController/HomeAngular.js"></script>

</body>

</html>
